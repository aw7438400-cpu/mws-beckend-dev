{
    "version": 2,
    "builds": [
        {
            "src": "api/index.php",
            "use": "vercel-php@0.8.0"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "public/build",
                "zeroConfig": true
            }
        }
    ],
    "routes": [
        {
            "src": "/build/(.*)",
            "continue": true,
            "headers": {
                "Cache-Control": "public, max-age=31536000, immutable"
            }
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "functions": {
        "api/index.php": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "outputDirectory": "public/build"
}